<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ECommerce.Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ECommerce.Admin.styles.css" asp-append-version="true" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Admin Panel</a>

            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Category" asp-action="Create">Category</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="User" asp-action="List">Users</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Comment" asp-action="List">Comments</a>
                </li>
            </ul>
        </div>
    </nav>

    <main class="container mt-4">
        @RenderBody()
    </main>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
